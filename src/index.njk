<article>
  <div class="headline">
    <h2 id="{{ snippet.fileSlug }}">{{ snippet.data.meta.title }}</h2>
    <a class="anchor" href="#{{ snippet.fileSlug }}">
      <span aria-hidden="true">#</span>
      <span class="hidden">Section titled {{ snippet.data.meta.title }}</span>
    </a>
  </div>
  <div class="actions">
  <ul class="categories">
    {% for category in snippet.data.meta.categories %}
    <li class="category-{{ category }}">
      {{ category }}
    </li>
    {% endfor %}
  </ul>
  {{ snippet.templateContent | safe }}
</article>
{% endfor %}
